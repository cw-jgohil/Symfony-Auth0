{% extends "layout.html.twig" %}

{% block content %}
<div class="content-layout">
    <h1 id="page-title" class="content__title">{{ messageType }} Page</h1>
    <div class="content__body">
        <p id="page-description">
            <span>This page retrieves a{{ messageType | lower == 'admin' ? 'n' : '' }} <strong>{{ messageType | lower }} message</strong>.
            </span>
            <br />
            <br />
            <span>{{ description | raw }}</span>
        </p>
        {{ include('components/code-snippet.html.twig', {title: messageType ~ ' Message', code: response}) }}
    </div>
</div>
{% endblock  %}
